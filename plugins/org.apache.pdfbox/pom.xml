<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>gwiki-parent</artifactId>
		<groupId>de.micromata.genome.gwiki</groupId>
		<version>0.9.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.micromata.genome.gwiki</groupId>
	<artifactId>gwiki-org.apache.org.apache.pdfbox</artifactId>
	<version>1.5.0</version>
	<packaging>jar</packaging>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>BuildPlugin</id>
						<phase>install</phase>
						<configuration>
							<tasks>
								<property name="ziptarget" value="../../gwiki/src/main/external_resources/gwiki_pub/pub/en/plugins" />
								<mkdir dir="target" />
								<delete file="target/${pom.artifactId}-${project.version}.zip" />
								<zip zipfile="target/${pom.artifactId}-${project.version}.zip">
									<fileset dir="target" includes="classes/**" />
									<fileset dir="" includes="content/**" />
									<fileset dir="" includes="lib/**" />
									<fileset dir="" includes="gwikiplugin.xml" />
								</zip>
								<copy file="target/${pom.artifactId}-${project.version}.zip" overwrite="true" todir="${ziptarget}"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>micromata_labs</id>
			<url>http://labs.micromata.de/nexus/content/groups/public/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
</project>